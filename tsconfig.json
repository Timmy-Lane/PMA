{
   "compilerOptions": {
      "target": "es2022",
      "moduleResolution": "bundler",
      "module": "esnext",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedParameters": false,
      "skipLibCheck": true,
      "rootDir": "./",
      "outDir": "./dist"
   },
   "include": ["./**/*.ts", "src"]
}
